{
  "bracketSpacing": true,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "all",
  "importOrder": [
    "^(react|next|styled-components)",
    "<THIRD_PARTY_MODULES>",
    "^packages/(.*)$",
    "^(components|routes)/(.*)$",
    "^[@/]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "jsx"]
}
